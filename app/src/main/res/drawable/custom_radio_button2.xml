<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Checked state -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="#5086B6" /> <!-- Blue fill for selected state -->
<!--            <stroke android:width="5dp" android:color="#1E88E5"/> &lt;!&ndash; Blue border for selected state &ndash;&gt;-->
        </shape>
    </item>

    <!-- Unchecked state -->
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/> <!-- White fill for unselected state -->
            <stroke android:width="2dp" android:color="#000000"/> <!-- Grey border for unselected state -->
        </shape>
    </item>
</selector>
