<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Câu hỏi"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/edtQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập câu hỏi"
            android:padding="10dp"
            android:inputType="text"
            android:background="@drawable/rounded_corner"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Các lựa chọn"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/edtAnswer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="lựa chọn 1"
            android:padding="10dp"
            android:inputType="text"
            android:background="@drawable/rounded_corner"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/edtAnswer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="lựa chọn 2"
            android:padding="10dp"
            android:inputType="text"
            android:background="@drawable/rounded_corner"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/edtAnswer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="lựa chọn 3"
            android:inputType="text"
            android:padding="10dp"
            android:background="@drawable/rounded_corner"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/edtAnswer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="lựa chọn 4"
            android:padding="10dp"
            android:inputType="text"
            android:background="@drawable/rounded_corner"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đáp án đúng"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/edtCorrectAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Đáp án đúng"
            android:padding="10dp"
            android:inputType="text"
            android:background="@drawable/rounded_corner"
            android:layout_margin="10dp"/>

</LinearLayout>
