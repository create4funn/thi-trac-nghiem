<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CreateExam2Activity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Tạo bài kiểm tra"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <EditText
        android:id="@+id/edtExamName2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên bài kiểm tra"
        android:layout_marginVertical="70dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="19dp"
        android:padding="20dp"
        android:inputType="text"
        android:background="@drawable/rounded_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv" />



    <EditText

        android:id="@+id/edtDuration2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Thời gian làm bài (phút)"
        android:layout_marginVertical="40dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="19dp"
        android:padding="20dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtExamName2"/>

    <TextView
        android:id="@+id/tvFilePdf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:hint="chưa có file"
        android:padding="20dp"
        android:textSize="19dp"
        android:maxLines="4"
        android:ellipsize="end"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="40dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toStartOf="@+id/btnChoosePdf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtDuration2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnChoosePdf"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_blue2"
        android:padding="18dp"
        android:text="chọn file"
        android:textSize="16dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/tvFilePdf"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvFilePdf" />

    <EditText

        android:id="@+id/edtNumOfQues2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="40dp"
        android:background="@drawable/rounded_corner"
        android:hint="Số câu hỏi"
        android:inputType="number"
        android:padding="20dp"
        android:textSize="19dp"
        app:layout_constraintEnd_toStartOf="@+id/btnCreateQues2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFilePdf" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCreateQues2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_blue2"
        android:textColor="@color/white"
        android:padding="18dp"
        android:text="Thiết lập"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/edtNumOfQues2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edtNumOfQues2" />

