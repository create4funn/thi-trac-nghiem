<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:background="@drawable/background_item2"
    >
    <TextView
        android:id="@+id/tv_examTitle_saved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bài test"
        android:textSize="26dp"
        android:textStyle="bold"
        android:maxLines="1"
        android:layout_marginLeft="8dp"
        android:ellipsize="end" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tv_numOfQues_saved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13 câu"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/tv_duration_saved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 phút"
            android:textColor="@android:color/holo_red_dark" />
    </LinearLayout>


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"

        >


        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="Xóa"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/baseline_delete_24"/>


        <TextView
            android:id="@+id/tv_do"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="Làm bài"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/baseline_directions_24"/>
    </LinearLayout>
