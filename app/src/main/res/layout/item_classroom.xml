<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:padding="10dp"
    android:background="@drawable/background_item"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:id="@+id/imgClass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/black"
            />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tenLop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="15dp"
        android:text="tên lớp"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/cardview"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/class_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toán"
        android:textSize="19dp"
        android:textColor="#0F81DC"
        android:layout_margin="17dp"
        app:layout_constraintTop_toBottomOf="@+id/tenLop"
        app:layout_constraintStart_toEndOf="@id/cardview"
        android:background="@drawable/rounded_blue"
        android:paddingVertical="2dp"
        android:paddingHorizontal="10dp"/>
    <TextView
        android:id="@+id/grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lớp 12"
        android:textSize="19dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_margin="17dp"
        app:layout_constraintTop_toBottomOf="@+id/tenLop"
        app:layout_constraintStart_toEndOf="@id/class_subject"
        android:background="@drawable/rounded_blue2"
        android:paddingVertical="2dp"
        android:paddingHorizontal="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>